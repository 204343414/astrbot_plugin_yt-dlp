{
  "monitor": {
    "description": "监控设置",
    "type": "object",
    "items": {
      "http_port": {
        "description": "HTTP 接收端口",
        "type": "int",
        "default": 9876,
        "hint": "接收 GMod 服务器发来数据的端口，需要在防火墙放行"
      },
      "notify_group_id": {
        "description": "通知群号",
        "type": "string",
        "default": "",
        "hint": "服务器崩溃/封禁时自动发送通知到这个QQ群，留空则不主动通知"
      },
      "auto_analyze": {
        "description": "崩溃后自动分析E2代码",
        "type": "bool",
        "default": true,
        "hint": "检测到崩溃时是否自动调用LLM分析最后上传的E2代码"
      }
    }
  }
}
